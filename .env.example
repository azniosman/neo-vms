# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DB_NAME=neo_vms
DB_USER=neo_vms_user
DB_PASSWORD=secure_password
DB_HOST=localhost
DB_PORT=5432
DB_DIALECT=sqlite

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_super_secure_session_secret_here

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=noreply@neo-vms.local
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=Neo VMS <noreply@neo-vms.local>

# SMS Configuration (optional)
SMS_API_KEY=your_sms_api_key_here
SMS_API_SECRET=your_sms_api_secret_here

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Security Configuration
CSRF_SECRET=your_csrf_secret_here
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=12

# Application Configuration
APP_NAME=Neo VMS
APP_URL=https://192.168.1.100
FRONTEND_URL=https://192.168.1.100

# SSL Configuration
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# PDPA Configuration
DATA_RETENTION_DAYS=2555
PHOTO_RETENTION_DAYS=90
LOG_RETENTION_DAYS=2555
AUTO_PURGE_ENABLED=true

# Backup Configuration
BACKUP_PATH=./backups
BACKUP_SCHEDULE=0 2 * * *

# Emergency Configuration
EMERGENCY_CONTACTS=admin@company.com,security@company.com
EMERGENCY_PHONE=+1234567890