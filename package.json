{
  "name": "neo-vms",
  "version": "1.0.0",
  "description": "Modern PDPA-compliant visitor management system",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "setup": "bash scripts/setup.sh",
    "create-admin": "node scripts/create-admin.js",
    "test": "node tests/testRunner.js",
    "test:unit": "node tests/testRunner.js unit",
    "test:integration": "node tests/testRunner.js integration",
    "test:e2e": "node tests/testRunner.js e2e",
    "test:frontend": "cd client && npm test",
    "test:all": "node tests/testRunner.js all",
    "test:watch": "node tests/testRunner.js unit --watch",
    "test:coverage": "node tests/testRunner.js all --coverage",
    "test:ci": "CI=true node tests/testRunner.js all --coverage --bail --runInBand",
    "lint": "eslint server/ client/src/",
    "lint:fix": "eslint server/ client/src/ --fix",
    "typecheck": "cd client && npm run typecheck",
    "install:all": "npm install && cd client && npm install",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "backup": "bash scripts/backup.sh",
    "restore": "bash scripts/restore.sh"
  },
  "keywords": ["visitor-management", "pdpa", "security", "compliance"],
  "author": "Neo VMS Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.32.1",
    "socket.io": "^4.7.2",
    "nodemailer": "^6.9.4",
    "qrcode": "^1.5.3",
    "sharp": "^0.32.4",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "speakeasy": "^2.0.0",
    "csurf": "^1.11.0",
    "express-session": "^1.17.3",
    "cookie-parser": "^1.4.6",
    "morgan": "^1.10.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.46.0",
    "eslint-config-node": "^4.0.0",
    "eslint-plugin-security": "^1.7.1",
    "@types/jest": "^29.5.3",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "jest-environment-jsdom": "^29.6.2",
    "jest-environment-node": "^29.6.2",
    "playwright": "^1.37.0",
    "csv-stringify": "^6.4.0",
    "node-schedule": "^2.1.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}