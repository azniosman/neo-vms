{
  "name": "neo-vms",
  "version": "1.0.0",
  "description": "Modern PDPA-compliant visitor management system",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint server/ client/src/",
    "lint:fix": "eslint server/ client/src/ --fix",
    "typecheck": "cd client && npm run typecheck",
    "setup": "npm install && cd client && npm install",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "keywords": ["visitor-management", "pdpa", "security", "compliance"],
  "author": "Neo VMS Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6",
    "sequelize": "^6.32.1",
    "socket.io": "^4.7.2",
    "nodemailer": "^6.9.4",
    "qrcode": "^1.5.3",
    "sharp": "^0.32.4",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "speakeasy": "^2.0.0",
    "csurf": "^1.11.0",
    "express-session": "^1.17.3",
    "cookie-parser": "^1.4.6",
    "morgan": "^1.10.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.46.0",
    "eslint-config-node": "^4.0.0",
    "eslint-plugin-security": "^1.7.1",
    "@types/jest": "^29.5.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}