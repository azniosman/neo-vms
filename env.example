# Neo VMS Environment Configuration
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
PORT=3001
HOST=localhost
APP_NAME=Neo VMS
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_DIALECT=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=neo_vms
DB_USER=neo_vms_user
DB_PASSWORD=secure_password

# Redis Configuration (for sessions and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_REFRESH_SECRET=your-super-secure-jwt-refresh-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-key-here

# CSRF Configuration
CSRF_SECRET=your-super-secure-csrf-secret-key-here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=Neo VMS <noreply@neo-vms.local>

# SMS Configuration (Twilio)
SMS_API_KEY=your-twilio-api-key
SMS_API_SECRET=your-twilio-api-secret
SMS_FROM_NUMBER=+1234567890

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# PDPA Configuration
DATA_RETENTION_DAYS=2555
PHOTO_RETENTION_DAYS=90
LOG_RETENTION_DAYS=2555
AUTO_PURGE_ENABLED=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# SSL Configuration
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Logging Configuration
LOG_LEVEL=info

# Testing Configuration
TEST_DB_NAME=neo_vms_test
CI=false 